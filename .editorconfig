# EditorConfig is awesome: https://EditorConfig.org
root = true

# top-most EditorConfig file
root = true

# Set default charset
[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab and indentation
[*]
indent_style = space
indent_size = 4

[*.{js,css}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

# Codestyle
trim_trailing_whitespace = true
